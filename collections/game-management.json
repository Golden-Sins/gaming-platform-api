	"item": [
		{
			"name": "Get Game Catalog",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Game catalog request successful\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Query parameters included\", function () {\r",
							"    const jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.args).to.have.property('operatorId');\r",
							"    pm.expect(jsonData.args).to.have.property('category');\r",
							"});\r",
							"\r",
							"pm.test(\"Response time acceptable\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(10000);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{authToken}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/get?operatorId={{operatorId}}&category=slot&limit=50",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"get"
					],
					"query": [
						{
							"key": "operatorId",
							"value": "{{operatorId}}"
						},
						{
							"key": "category",
							"value": "slot"
						},
						{
							"key": "limit",
							"value": "50"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Launch Game",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Game launch request successful\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Game launch payload contains required fields\", function () {\r",
							"    const jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.data).to.have.property('gameId');\r",
							"    pm.expect(jsonData.data).to.have.property('playerId');\r",
							"    pm.expect(jsonData.data).to.have.property('operatorId');\r",
							"});\r",
							"\r",
							"pm.test(\"Authorization header present\", function () {\r",
							"    const jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.headers.authorization).to.exist;\r",
							"});\r",
							"\r",
							"pm.test(\"Response time acceptable\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(10000); // 10 seconds\r",
							"});\r",
							"\r",
							"// Store session ID for future tests\r",
							"pm.environment.set(\"sessionId\", \"session_\" + pm.variables.replaceIn('{{$randomUUID}}'));"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{authToken}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {

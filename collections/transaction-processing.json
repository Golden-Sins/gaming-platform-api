	"item": [
		{
			"name": "Place Bet",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Set environment variables from CSV data for this iteration",
							"if (pm.iterationData.has('player_id')) {",
							"    pm.environment.set('playerId', pm.iterationData.get('player_id'));",
							"}",
							"if (pm.iterationData.has('game_id')) {",
							"    pm.environment.set('gameId', pm.iterationData.get('game_id'));",
							"}",
							"if (pm.iterationData.has('bet_amount')) {",
							"    pm.environment.set('betAmount', pm.iterationData.get('bet_amount'));",
							"}",
							"if (pm.iterationData.has('currency')) {",
							"    pm.environment.set('currency', pm.iterationData.get('currency'));",
							"}"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Bet request successful\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Bet payload correct\", function () {",
							"    const jsonData = pm.response.json();",
							"    const expectedPlayerId = pm.environment.get(\"playerId\");",
							"    const expectedGameId = pm.environment.get(\"gameId\");",
							"    ",
							"    pm.expect(jsonData.data.playerId).to.equal(expectedPlayerId);",
							"    pm.expect(jsonData.data.gameId).to.equal(expectedGameId);",
							"});",
							"",
							"pm.test(\"Bet amount in request\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.data.betAmount).to.exist;",
							"});",
							"",
							"pm.test(\"Transaction processing time under 1 second\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);",
							"});",
							"",
							"// Save transaction ID",
							"pm.environment.set(\"lastTransactionId\", \"txn_\" + pm.variables.replaceIn('{{$randomUUID}}'));"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{authToken}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"playerId\": \"{{playerId}}\",\r\n  \"gameId\": \"{{gameId}}\",\r\n  \"sessionId\": \"{{sessionId}}\",\r\n  \"betAmount\": {{betAmount}},\r\n  \"currency\": \"{{currency}}\",\r\n  \"roundId\": \"{{$randomUUID}}\",\r\n  \"transactionId\": \"bet_{{$randomUUID}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/post",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"post"
					]
				}
			},
			"response": []
		},
